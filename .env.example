# MathFoundry self-host defaults
MATHFOUNDRY_BUDGET_CAP_USD=300
MATHFOUNDRY_ARXIV_CATEGORY=math.AG
MATHFOUNDRY_STRICT_ABSTAIN=true

# Keep storage bounded for 500GB server
MATHFOUNDRY_MAX_RAW_FILES=200
MATHFOUNDRY_MAX_RESULTS_PER_INGEST=100
MATHFOUNDRY_DATA_DIR=./data

# Worker schedule
MATHFOUNDRY_INGEST_INTERVAL_MIN=180

# Optional service URLs for future wiring
DATABASE_URL=postgresql://mathfoundry:mathfoundry@postgres:5432/mathfoundry
QDRANT_URL=http://qdrant:6333
